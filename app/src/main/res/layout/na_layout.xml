<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/backbtnDash"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@android:color/transparent"
        android:src="@drawable/arrow_back" />

    <TextView
        android:id="@+id/txtmainDash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/semibold"
        android:gravity="center"
        android:text="No Options Available yet!\nPlease wait for the schools announcements"
        android:textColor="@color/grey"></TextView>


    <Button
        android:id="@+id/moretextDash"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="-20dp"
        android:background="@drawable/search_bg2"
        android:fontFamily="@font/semibold"
        android:padding="20dp"
        android:text="Show me Other Online Options"
        android:textColor="#616562"
        android:textSize="12dp" />

</RelativeLayout>