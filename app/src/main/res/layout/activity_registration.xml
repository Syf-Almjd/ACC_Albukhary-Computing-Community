<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".activity.registration">

    <TextView
        android:id="@+id/T"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"></TextView>

    <EditText
        android:id="@+id/Regname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/Regemail"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/search_bg"
        android:hint="Name"
        android:inputType="text"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColorHint="#A7A7A7"></EditText>

    <EditText
        android:id="@+id/Regemail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/T"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/search_bg"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColorHint="#A7A7A7">

    </EditText>

    <EditText
        android:id="@+id/StudentIDReg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/Regemail"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/search_bg"
        android:hint="Student ID"
        android:inputType="text"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColorHint="#A7A7A7">

    </EditText>

    <EditText
        android:id="@+id/regPhone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/StudentIDReg"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/search_bg"
        android:hint="Phone Number"
        android:inputType="phone"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColorHint="#A7A7A7">d</EditText>

    <EditText
        android:id="@+id/Regpass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/regPhone"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/search_bg"
        android:hint="Password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColorHint="#A7A7A7">

    </EditText>


    <Button
        android:id="@+id/MainBtnReg"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@+id/ButtonLog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/search_bg"
        android:backgroundTint="@color/colorP2"
        android:text="Register"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ButtonLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Regpass"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:text="Have an account?"
        android:textColor="#3BA8BE"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Regname"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="130dp"
        android:text="Welcome! â­"
        android:textAlignment="center"
        android:textColor="#4E4E4E"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Regname"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:text="Let's Register First"
        android:textAlignment="center"
        android:textColor="#4E4E4E"
        android:textSize="16sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btnFor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Regpass"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="70dp"
        android:background="@android:color/transparent"
        android:text="Forgot Password?"
        android:textColor="#A7A7A7"
        android:textSize="10dp" />


    <ProgressBar
        android:id="@+id/progressBarReg"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MainBtnReg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:visibility="invisible" />

</RelativeLayout>