<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.asdds">

    <EditText
        android:id="@+id/emailasd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/passAsd"
        app:layout_constraintStart_toStartOf="@+id/passAsd"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/passAsd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/emailasd"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="166dp" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/passAsd"
        app:layout_constraintStart_toStartOf="@+id/passAsd"
        app:layout_constraintTop_toBottomOf="@+id/passAsd"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>